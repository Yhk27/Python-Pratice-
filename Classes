class weightCalc:
    def __init__ (self, weight):
        self.weight = weight

from weightCalc import weightCalc

weightCalc.weight = input("What is your weight in lbs?: ")
weight_in_kilos = float(weightCalc.weight) * 0.453592

msg = f'Your weight in Kilos is {weight_in_kilos}'
print(msg)
print("Your weight in Kilos is: " + str(weight_in_kilos))

