class patient:
    def __init__(self, name, age, NeworOld):
        self.name = name
        self.age = age
        self.NeworOld = NeworOld
        
        

from patient import patient

patient.name = input("What is your name?: ")
patient.age = input("What is your age?: ")

patient.NeworOld= input("Are you a new or old student?: Y for New, N for Old: ")

print("Hello, " + patient.name)
print("You are " + patient.age)

if patient.NeworOld == 'y' or 'Y':
    print("You are a new Student, Welcome! ")
else:
    print("Welcome Back! ")
    
    
    
    
